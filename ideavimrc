set showmode
set ignorecase
set smartcase
set relativenumber
set number
set scrolloff=3
set sidescrolloff=5
set clipboard=unnamedplus,unnamed
set showcmd

" Shifted arrow keys start selection mode
set selectmode=mouse,key,ideaselection
set keymodel=startsel,stopselect

" idea specific settings
set ideajoin

set commentary
set surround

" Keyboard mappings
let mapleader=","
inoremap jk <ESC>
nnoremap <leader>v <c-v>

